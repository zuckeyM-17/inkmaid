{
  "name": "inkmaid",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "setup-env": "./scripts/setup-worktree.sh",
    "setup:default": "./scripts/setup-worktree.sh --default",
    "dev": "npx dotenv-cli -e .env -- sh -c 'pnpm --filter web dev --port ${NEXT_PORT:-3000}'",
    "dev:all": "pnpm db:up && pnpm dev",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "pnpm --filter web exec tsc --noEmit",
    "test": "vitest",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f postgres",
    "db:restart": "docker compose restart postgres",
    "db:reset": "docker compose down -v && docker compose up -d postgres",
    "langfuse:up": "docker compose --profile langfuse up -d",
    "langfuse:down": "docker compose --profile langfuse down",
    "langfuse:logs": "docker compose --profile langfuse logs -f",
    "langfuse:reset": "docker compose --profile langfuse down -v && docker compose --profile langfuse up -d",
    "db:push": "pnpm --filter web db:push",
    "db:generate": "pnpm --filter web db:generate",
    "db:migrate": "pnpm --filter web db:migrate",
    "db:studio": "pnpm --filter web db:studio",
    "db:status": "docker compose ps",
    "prod:build": "docker compose -f docker-compose.prod.yml build",
    "prod:up": "docker compose -f docker-compose.prod.yml up -d",
    "prod:down": "docker compose -f docker-compose.prod.yml down",
    "prod:logs": "docker compose -f docker-compose.prod.yml logs -f",
    "git:clean-branches": "git branch --merged | grep -v -E '^\\*|main$|master$|develop$' | xargs git branch -d 2>/dev/null || echo 'No merged branches to delete'",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "dotenv-cli": "^8.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": ["biome check --write"],
    "*.json": ["biome check --write"]
  },
  "packageManager": "pnpm@9.15.1",
  "engines": {
    "node": ">=20.0.0"
  }
}
